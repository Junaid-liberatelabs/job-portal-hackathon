FROM python:3.13-slim-bookworm

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    libgomp1 \
    libgfortran5 \
    libquadmath0 \
    zlib1g \
    libopenblas0 \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

WORKDIR /app

# Copy dependency files
COPY uv.lock pyproject.toml ./

# Install dependencies
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --locked --no-install-project --no-dev

# Copy application
COPY . .

# Install project
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --locked --no-dev

# Pre-download FastEmbed models as root (before switching to nonroot user)
# This downloads models to /root/.cache/fastembed
RUN python -c "from fastembed import TextEmbedding; TextEmbedding(model_name='BAAI/bge-small-en-v1.5')" || true

# Create cache directory and copy models
RUN mkdir -p /app/.cache/fastembed \
    && if [ -d /root/.cache/fastembed ]; then cp -r /root/.cache/fastembed/* /app/.cache/fastembed/; fi

# Create non-root user
RUN groupadd -r nonroot && useradd -r -g nonroot -u 1000 nonroot \
    && chown -R nonroot:nonroot /app

USER nonroot

# Set cache path to writable location
ENV FASTEMBED_CACHE_PATH=/app/.cache/fastembed
ENV HOME=/app
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONPATH="/app"

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]